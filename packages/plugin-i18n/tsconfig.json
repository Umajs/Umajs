{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir":"./src",
        "outDir":"./lib",
        "declaration": true,
        "alwaysStrict": true,
        "removeComments": true,
        "preserveWatchOutput": true,
        "experimentalDecorators": true,
        "baseUrl": "./src"
    },
    "include":[
        "./src/**/*"
    ]
}