{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir":"./src",
        "outDir":"./lib",
        "declaration": true,
        "alwaysStrict": true,
        "removeComments": true,
        "preserveWatchOutput": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include":[
        "./src/**/*"
    ]
}